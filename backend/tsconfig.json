{
    "$schema": "https://json.schemastore.org/tsconfig",
    "display": "Node 18",

    "_version": "18.17.1",

    "compilerOptions": {
        "lib": ["es2020"],
        "module": "node16",
        "target": "es2022",

        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "node16"
    }
}